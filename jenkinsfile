pipeline {
    agent any

    stages {
        stage("Build") {
            steps{
                sh 'cd Homework2/demo && mvn clean package'
            }
        }

        stage("Save Artifact"){
            steps {
                 archiveArtifacts artifacts: 'Homework2/demo/target/*.jar'
                }
            }
        
    }

    post {
        success {
            slackSend channel: 'jenkins_closing_task', message: 'Build Success'
        }
         
        failure {
            slackSend channel: 'jenkins_closing_task', message: 'Build Failed'
        }
    }

}
