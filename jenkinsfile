pipeline {
    agent any

    stages {
        stage("Build") {
            steps{
                sh 'cd Homework2/demo'
            }
        }

        stage("Save Artifact"){
            steps {
                sh 'cd Homework2/demo'
                sh './mvnw spring-boot:run'
                }
            }
        
    }

    post {
        success {
            slackSend channel: 'jenkins_closing_task', message: 'Build Success'
        }
         
        failure {
            slackSend channel: 'jenkins_closing_task', message: 'Build Failed'
        }
    }

}
