pipeline {

  agent any
  stages{
    stage('Build container') {
      steps {
        sh 'cd Homework3/FlaskApp && sudo docker build -t flaskapp_web:$BUILD_NUMBER .'
      }
    }

    stage('Publish container') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'Dockerhub', passwordVariable: 'pass', usernameVariable: 'username')]) {
                    // the code here can access $pass and $user
                    sh 'docker login -u ${username} -p ${pass}'
                    sh 'docker push flaskapp_webflaskapp_web:$BUILD_NUMBER'
                }
            }
        }
    }
}
    