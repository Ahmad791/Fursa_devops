pipeline {

  agent any
  
  stages {
         stage('Git Clone') {
            steps {
                git url:"https://github.com/MaryamWahbi1/Docker-Final-Task.git", branch:'master'
            }
        }
    stage('Build Docker') {
      steps {
        sh 'cd Homework3/FlaskApp && sudo docker build -t flaskapp:$BUILD_NUMBER .'
      }
    }
     stage('Build Tag') {
        steps{
            sh 'docker tag flaskapp:$BUILD_NUMBER ahmad791/flaskapp:$BUILD_NUMBER'
        }
         
     }

    stage('Push Docker') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'Dockerhub', passwordVariable: 'pass', usernameVariable: 'username')]) {
                    // the code here can access $pass and $user
                    sh 'docker login -u ${username} -p ${pass}'
                    sh 'docker push ahmad12abed/bitcoin:$BUILD_NUMBER'
                }
            }
        }
    }

    
}